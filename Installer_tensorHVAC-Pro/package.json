{
  "name": "Installer_tensorHVAC-Pro",
  "version": "2026.1.1",
  "description": "Installer and Uninstaller for WSL, OpenFOAM, ParaView-mod, tCFD-Pre, and tensorHVAC-Pro-2026.1.1",
  "main": "main.js",
  "author": "PT Tensor Karya Nusantara",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --x64"
  },
  "build": {
    "appId": "com.tensorcfd.installer",
    "productName": "tensorHVAC-Pro Installer/Uninstaller",
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "assets/**"
    ],
    "win": {
      "icon": "assets/app.ico",
      "target": "nsis"
    },
    "asar": true
  },
  "devDependencies": {
    "electron": "^31.3.0",
    "electron-builder": "^24.13.3"
  }
}
