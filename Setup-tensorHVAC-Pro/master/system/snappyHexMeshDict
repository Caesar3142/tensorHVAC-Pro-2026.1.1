    outlet.stl  { type triSurfaceMesh; name outlet; }
    wall_1.stl    { type triSurfaceMesh; name wall_1; }
    inlet_1.stl { type triSurfaceMesh; name inlet_1; }
    object_1.stl { type triSurfaceMesh; name object_1; }
}


